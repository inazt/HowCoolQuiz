/**
    How Cool Form Stucture

*/
function form_generation($form_state){
  if(empty($form_state['values'])){
    return email_form($form_state);
  }else if($form_state['values']['back']=='Back'){
    return form_back_generation($form_state);
  }else{
    return personal_form($form_state);
  
  }
}

function form_back_generation($form_state){
  if($form_state['values']['page'] == 'personal'){
    return email_form($form_state);
  }
}

function form_generation_submit(&$form, &$form_state) {
  $form_state['storage']['values'] = $form_state['values'];
  $form_state['rebuild'] = TRUE;
  drupal_set_message($form_state['values']['page']);
  //drupal_set_message($form_state['values']['email']);
  //drupal_set_message('send');
  //drupal_goto('result',array("email"=>$form['value']['email']));
}

